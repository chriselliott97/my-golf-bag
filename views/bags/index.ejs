<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Golf Bags</h1>
  <% if (user) { %>
    <h2>Add a Bag!</h2>
    <form action="/bags" method="POST">
      <div>
        <label>
          Unique Bag Name: 
          <input type="text" name="name" autocomplete="off">
        </label>
      </div>
      <div>
        <label>
          Years of Golfing Experience:
          <input type="number" name="year">
        </label>
        <button type="submit">Add Bag</button>
      </div>  
    </form>
  <% } %>
  <h2>All Bags</h2>
	<ul>
  <% bags.forEach(bag => { %>
    <li> <%= bag.name %> whose owner <%= bag.owner.name %> 
      <% if(bag.year > 0) { %>
        has been golfing for <%= bag.year %> years 
      <% } else { %> 
        has no experience in golf but wants to learn
      <% } %>  
      </li>
    <form action="/bags/<%= bag._id %>">
    <button>VIEW BAG</button>
    </form>
  <% }) %>
  </ul>
</section>

<%- include('../partials/footer') %>